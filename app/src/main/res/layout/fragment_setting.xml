<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_circle_left_24"
            android:padding="10dp"
            app:tint="@color/backgroundcolor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Paramètres"
            android:textColor="@color/black"
            android:textSize="19dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Logo"
        android:textColor="@color/black"
        android:textSize="40sp">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="login"
            android:padding="20dp"
            android:text="Modifier mes informations"
            android:textAllCaps="false"
            android:textColor="#636262"
            android:textSize="18sp"
            app:backgroundTint="@color/white"
            android:drawableStart="@drawable/baseline_perm_contact_calendar_24"
            android:drawablePadding="8dp"
            app:drawableTint="@color/backgroundcolor"/>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="login"
            android:padding="20dp"
            android:text="A propos"
            android:textAllCaps="false"
            android:textColor="#636262"
            android:textSize="18sp"
            app:backgroundTint="@color/white"
            android:drawableStart="@drawable/baseline_info_24"
            android:drawablePadding="8dp"
            app:drawableTint="@color/backgroundcolor"/>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="login"
            android:padding="20dp"
            android:text="Déconnexion"
            android:textAllCaps="false"
            android:textColor="#636262"
            android:textSize="18sp"
            app:backgroundTint="@color/white"
            android:drawableStart="@drawable/baseline_person_off_24"
            android:drawablePadding="8dp"
            app:drawableTint="@color/backgroundcolor"/>





    </LinearLayout>


</RelativeLayout>